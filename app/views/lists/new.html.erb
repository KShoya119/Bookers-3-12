<h1>Books</h1>

<% @lists.each do |list| %>
  <p>title</p>
    <span><%= list.title %></span>
  <p>body</p>
    <span><%= list.body %></span>
  
  <%= link_to "Show", list_path(list.id) %>
  <%= link_to "Destroy", destroy_list_path(list.id), method: :delete, "data-confirm" => "Are you sure?" %>
<% end %>

<h2>New book</h2>
<%= form_with model: @list, url: '/lists', method: :post do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>